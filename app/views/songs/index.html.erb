<ul>
<% @songs.each do |song| %>
  <li><%= display_artist(song) %> - <%= link_to song.title, song_path(song) %></li>
<% end %>
</ul>
<br>

<% if params[:artist_id] %>
  <%= link_to "Add New Song", new_artist_song_path(params[:artist_id]) %>
<% else %>
  <%= link_to "Add New Song", new_song_path %>
<% end %>
